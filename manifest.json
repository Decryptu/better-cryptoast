{
    "manifest_version": 2,
    "name": "Better Cryptoast",
    "description": "This extension enhances the CSS of Cryptoast.fr, bug fixes, dark & light theme auto detect...",
    "version": "1.0",
    "icons": {
      "128": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["*://cryptoast.fr/*"],
        "css": ["styles.css"],
        "js": ["theme.js", "content.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "*://cdnjs.cloudflare.com/ajax/libs/cookieconsent2/1.0.10/cookieconsent.min.js",
      "*://cdn.onesignal.com/sdks/OneSignalSDK.js",
      "*://cryptoast.fr/wp-content/plugins/page-links-to/dist/new-tab.js"
    ]
}
